<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/myEditText"
        android:layout_width="410dp"
        android:layout_height="53dp"
        android:layout_marginBottom="476dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_black"
        android:layout_width="123dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="160dp"
        android:text="черный текст"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_8sp"
        android:layout_width="123dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="228dp"
        android:text="размер 8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_yellowBack"
        android:layout_width="123dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="292dp"
        android:text="желтый фон"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_red"
        android:layout_width="123dp"
        android:layout_height="56dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="16dp"
        android:text="красный текст"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button24sp"
        android:layout_width="123dp"
        android:layout_height="56dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="16dp"
        android:text="размер 24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_whiteBack"
        android:layout_width="123dp"
        android:layout_height="56dp"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="16dp"
        android:text="белый фон"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>